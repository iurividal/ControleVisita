    function OnAppointmentClick(e) {
        console.log(e.appointmentData.AppointmentId);


        window.location.href = '../Visita/Cadastrar?p=' + e.appointmentData.AppointmentId;
    }
    function OnAppointmentFormOpening(e) {
        console.log(e);
        //        console.log(link);

        window.location.href = 'Visita/Cadastrar?p=' + e.appointmentData.AppointmentId;
        e.cancel = true;
    }

</script>